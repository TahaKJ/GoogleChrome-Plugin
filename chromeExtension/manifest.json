{
  "manifest_version": 2,

  "name": "Chrome INSA",
  "description": "INSA websites Reporting",
  "version": "1.0",
  "icons": {
    "128": "icon128.png",
    "48": "icon48.png",
    "16": "icon16.png"
  },

  "permissions": [
    "storage",
    "tabs",
    "bookmarks",
    "https://www.insa-rennes.fr/",
    "http://www.groupe-insa.fr/",
    "https://www.insa-rouen.fr/",
    "http://*.google.com/",
    "unlimitedStorage",
    "notifications"
  ],

  "web_accessible_resources": [
    "ucloud.png"
  ],

  "browser_action": {
    "default_icon": "icon16.png",
    "default_popup": "popup.html"
  },

  "background": {
    "scripts" : ["background.js"]
  }
}
